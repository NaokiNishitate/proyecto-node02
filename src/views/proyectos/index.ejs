<%- include('../partials/header') %>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Listado de Proyectos</h1>
        <a href="/proyectos/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Proyecto
        </a>
    </div>

    <% if (proyectos.length===0) { %>
        <div class="alert alert-info">No hay proyectos registrados</div>
    <% } else { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% proyectos.forEach(proyecto=> { %>
                        <tr>
                            <td><%= proyecto.id %></td>
                            <td><%= proyecto.nombre %></td>
                             <td>
                                <div class="btn-group" role="group">
                                    <a href="/proyectos/<%= proyecto.id %>/edit" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <form action="/proyectos/<%= proyecto.id %>/delete" method="POST" class="ms-2">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de eliminar este proyecto?')">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>
<%- include('../partials/footer') %>
